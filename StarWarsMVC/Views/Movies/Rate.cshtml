@model StarWars.Core.MovieRating

<h1>You are now rating the movie: @ViewBag.Title</h1>

<form asp-action="AddRatingToDB" method="post">
	<div class="form-group">
		<input type="hidden" asp-for="EpisodeId" />
		<div class="row">
			<select asp-for="ScoreSum" class="form-control" asp-items="Html.GetEnumSelectList<StarWars.Core.MovieRatings>()" style="width:20%">
			</select>
		</div>
	</div>

	<div class="btn-group" role="group">
		<input type="submit" value="Rate" class="btn btn-outline-danger" />
		<a asp-action="Index" class="btn btn-outline-dark">Back to list</a>
	</div>
</form>

